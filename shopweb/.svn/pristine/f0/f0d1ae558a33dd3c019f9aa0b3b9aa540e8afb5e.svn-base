  	$('.button').click(function(){

  		//报名
			var url= "{:U('User/joinActivity')}";
			console.log(url);
			$.ajax({
				type:'POST',
				url:url,
				data:"{}",
				beforeSend:function(){
					$('#loading').show();
				},
				success:function(data){
					$('#loading').hide();
					if(data.code==1){
						now1 = {$num.now_num}+1;
						$('.count').html(now1);
					}else{
						console.log(data.code);
					}
				},
				error:function(data){
					$('#loading').hide();
					console.log("error");
					console.log(data);
					
				},
				dataType:'json',
			});
  	});
