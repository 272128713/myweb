.container{
	width:100%;
	padding-top:44px;
}
.container .content-top{
	width:95%;
	margin:0 auto;
	padding-top:20px;
	padding-bottom:20px;
}
.container .content-top .p1{
	font-size:16px;
	text-align:center;
	padding-bottom:20px;
	color: #000;
}
.container .content-top img{
	width:20px;
	position:relative;
	top:3px;
	margin-right:5px;
}
.container .content-top .p2{
	font-size:14px;
	text-indent:2em;
}
.container .content-middle{
	height:6px;
	background:#e5e5e5;
	border-top: 1px solid #bbb;
	border-bottom: 1px solid #bbb;
}
.container .content-bottom{
	width:95%;
	padding-top:30px;
	margin:0 auto;
}
.container .content-bottom input{
	font-size:15px;
	text-align: left;
	width:100%;
	height:35px;
	border-radius:4px;
}
.content-bottom .tips{
	width:100%;
	height:35px;
	background:#e5e5e5;
	text-align:center;
	line-height:35px;
	font-size:14px;
	cursor: pointer;
	color:#777;
}
.content-bottom .tips:hover{
	background: #ddd;
}
.content-bottom .btn{
	width:100%;
	height:35px;
	background:#30c6df;
	margin-top:60px;
	border-radius:4px;
	text-align:center;
	line-height:35px;
	color:#fff;
	cursor: pointer;
	font-size:16px;
}
