		<script>
			apiready = function() {
				//pageParam
				gid = api.pageParam.gid;
				price = '';
				receive_name = '';
				receive_phone = '';
				area_code = '';
				area = '';
				address = '';
//				
//				counts = $api.offset($api.dom('.counts')).t;
//				$('.dqld_div').css('top',counts);
				//prefs
				api.getPrefs({
					key : 'uname'
				}, function(ret, err) {
					console.log(ret);
					if (ret.value) {
						uname = ret.value;
						$('#uname').val(uname);
					}
				});
				api.getPrefs({
					key : 'phone'
				}, function(ret, err) {
					console.log(ret);
					if (ret.value) {
						utel = ret.value;
						$('#utel').val(utel);
					}
				});
				api.getPrefs({
					key : 'ss'
				}, function(ret, err) {
					console.log(ret);
					if (ret.value) {
						ss = ret.value;
						//ajax
						api.ajax({
							url : commonUrl + 'get_user_address.php',
							data : {
								values : {
									ss : ss,
								}
							},
							method : 'post',
							dataType : 'json'
						}, function(ret, err) {
							if (ret) {
								if (ret.result) {
									//收货信息
									console.log(ret.result);
									receive_name = ret.result.receive_name;
									receive_phone = ret.result.receive_phone;
									area_code = ret.result.area_code;
									area = ret.result.area;
									address = ret.result.address;
									
									$('#sname').val(receive_name);
									$('#stel').val(receive_phone);
									$('#birth_pVal').attr("vl",area_code);
									$('#birth_pVal').html(area);
									$('#saddr').val(address);
								}
							} else {
								console.log(err);
							}
						});
					} else {
						api.alert({
							msg : '对不起，请登录'
						}, function(ret, err) {
							api.closeWin();
							api.openWin({
								name : 'login',
								url : 'win_login.html',
								pageParam : {
									winname : 'worder'
								}
							});
						});
					}
				});
			}
			$(function() {
				var count = 1;
				$('.dec').click(function() {
					if (count != 1)
						count -= 1;
					$('.num').html(count);
				});
				$('.inc').click(function() {
					count += 1;
					$('.num').html(count);
				});
				$('.pcarea').click(function() {
					var pcid = $(this).children('.detail').attr('id');
					setCookie('pcVal', pcid, 7);
					getProvinceBuy();
				});
				$('.submit').click(function() {
					goods_num = $('#goods_num').html();
					//商品数量
					//	            	console.log(goods_num);
					un = $('#un').val();
					utel = $('#utel').val();
					sname = $('#sname').val();
					stel = $('#stel').val();
					birth_pVal = $('#birth_pVal').attr("vl");
					//	            	console.log(birth_pVal);	//320101
					saddr = $('#saddr').val();
					api.ajax({
						url : commonUrl + 'goods_buy.php',
						data : {
							values : {
								rn : uname,
								un : utel,
								srn : sname,
								stel : stel,
								spro : birth_pVal,
								saddr : saddr,
								gid : gid,
								goods_num : goods_num,
								price : price * goods_num,
							}
						},
						method : 'post',
						dataType : 'json'
					}, function(ret, err) {
						//coding...
						if(ret){
							if(ret.code==1){
							
								api.closeWin();
								api.openWin({
	                                name: 'worder_ok',
	                                url: 'win_order_ok.html',
	                                pageParam: {
	                                	name:api.winName
	                                }
                                });					
							}else{
								api.toast({
	                                msg:ret.msg
                                });
							}
						}
					});
				});
			});
		</script>
