	<script>
		apiready = function() {
			api.getPrefs({
	            key:'header_h'
            },function(ret,err){
            	//coding...
            	header_h = ret.value;
            });
		}
		function reset(){
			un = $('#un').val();
			
				api.showProgress({
					title : '加载中...',
					modal : false
				});
			api.ajax({
	            url:commonUrl+'resetpwd.php',
	            method:'post',
	            data:{
	            	values:{
						fasion:	un            	
	            	}
	            },
	            dataType:'json',
            },function(ret,err){
            	//coding...
            	api.openFrame({
	                name: 'reset2',
	                url: 'frame_reset2.html',
	                rect: {
		                x:0,
		                y:header_h,
		                w:'auto',
		                h:'auto'
	                },
	                pageParam:{
	                	un:un
	                }
                });
            });
		
		}
