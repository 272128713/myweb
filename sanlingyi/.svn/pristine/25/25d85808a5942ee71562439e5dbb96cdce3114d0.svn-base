head h1{
}
header img{
	height: 44px;
	cursor: pointer;
}
.navi{
	position: fixed;
	top:45px;
	right: 0;
	width: 30%;
	color: #000;
	z-index: 9999;
	display: none;
	padding: 4px;
	text-align: center;
}
.navi .bg{
	position: absolute;
	top:0;
	right: 0;
	width: 100%;
	z-index: 9000;
    height: 100%;
    background-color:#676767;
    filter:Alpha(opacity=50);
    background-color: rgba(0,0,0,0.5);
}
.navi p{
	position: relative;
	z-index: 9001;
	border-bottom: 1px solid #fff;
	margin: 0;
	
}

.navi a{
	line-height: 3.5em;
	font-size: 12px;
	color: #fff;
	display: block;
}
.navi img{
	width: 1.5em;
	position: relative;
	top:0.4em;
	margin-right: 0.3em;
}
.navi .p_btm {
	border: 0;
}
.navi .p_btm a{
	line-height: 1em;
	padding-top:10px;
	padding-bottom: 10px;
}
.p_btm img{
	position: inherit;
	margin-left: 0.5em;
	width: 2.2em;
}
.navi a:hover{
	background: #666;
}
.hot{
	line-height: 3em;
	font-size: 16px;
	color: #30C6DF;
}
.hot img{
	position: relative;
	top:2px;
	margin-right: 0.3em;
	height: 16px;
}
.arrow{
	line-height: 2em;
	padding-left: 1em;
	cursor: pointer;
}
.hot-box{
	border: 1px solid #E1E1E1;
	padding: 3px;
	margin-top: 1em;
	cursor: pointer;
}
.hot-box img{
	width: 100%;
}
.hot-title{
	width:98%;
	margin: auto;
	color:#000;
	line-height: 2.2em;
}
.hot-content{
	width: 98%;
	margin: auto;
	padding-bottom: 0.5em;
}
.canyu{
	width: 98%;
	margin: auto;
	border-top: 1px solid #E1E1E1;
	line-height: 2em;
	font-size: 12px;
}
.canyu .red{
	font-size:12px;
}
.canyu .right{
	font-size:12px;
}
.canyu img{
	width: 0.9em;
	position: relative;
	top:1px;
	margin-right: 0.3em;
}
