		<script type="text/javascript">
		
		
		
			
		ss='<?php echo $ss;?>';
		aid='<?php echo $id;?>';
		html="";
		$.ajax({
			type:"POST",
			url:"../../1.0/get_public_welfare_activity_info.php",
			data:{ss:ss,activity_id:aid},
			dataType:"json",
			beforeSend:function(){
				$('.loading').show();
			},
			success:function(data){
				rs=data.result;
				$('.loading').hide();
				html+="<p class='title'>"+rs.title+"</p><p>"+rs.content+"</p><p class='zhiyuan'><span class='xin'></span><span class='vol'>志愿者</span><span class='num'>"+rs.now_people+"/"+rs.people_num+"</span></p>";
				
				$('.top-bg .text').html(html);
			},
			error:function(data){
				$('.loading').hide();
				console.log("er"+data);
			}
			
		});
		imgHtml="";
		$.ajax({
			type:"POST",
			url:"../../1.0/get_public_welfare_activity_people.php",
			data:{ss:ss,activity_id:aid},
			dataType:"json",
			beforeSend:function(){
				$('.loading').show();
			},
			success:function(data){
				
				
				$('.loading').hide();
				rs=data.result;
				rslength = rs.length;
				for(i=0;i*5<rslength;i++){
					imgHtml+="<div class='swiper-slide'>";
					y = (rslength-i*5)/5;
					if(y>1){
						
						b = 5;
					}else{
						b = (rslength-i*5)%5;
						
					}
					for(j=0;j<b;j++){
						key = 5*i+j;
						ctime = rs[key].createDate;
						imgUrl = rs[key].url;
						if(imgUrl!=""){
							imgUrl = imgUrl.substr(7);
						}else{
							imgUrl = "../common/img/default.jpg";
						}
						ctime = transtime(ctime);
						imgHtml+="<div class='pull-left'><p class='time'>"+ctime+"</p><img class='timeline' src='images/timeline1.png'><div class='ph_nike'><img src='"+imgUrl+"'><p>"+rs[key].name+"</p></div></div>";
					}
					imgHtml+="</div>";
					
				}
				
				
								
				$('.swiper-wrapper').html(imgHtml);
				var ww = $(window).width();
				$('.triangle').css('left',(ww - 10)/2);
			
			
			
				//图片滚动初始化
					var mySwiper = new Swiper('.swiper-container',{
				    	loop: true,
						autoplay: 0,
						loop : false,
				  	});
			},
			error:function(data){
				$('.loading').hide();
				console.log("er"+data);
			}
			
		});
		click=0;
		$('#joinActive').on('touchend',function(){
			if(click==0){
				joinActive();
			}else if(click==1){
				layer.msg("您已经参与过了");
			}
		});
		//时间转化成时间戳
		function transtime(time){
			var aa =transdate(time);
			var time=new Date(parseInt(aa) * 1000).format('MM.dd');
			return time;
		}
		function joinActive(){
			
			$.ajax({
				type:'POST',
				url:"../../1.0/join_public_welfare_activity.php",
				data:{ss:ss,activity_id:aid},
				dataType:'json',
				beforeSend:function(){
					$('.loading').show();
				},
				success:function(data){
					$('.loading').hide();
					if(data.code==1){
						$('#joinActive').html("已参与");
						click=1;
					}else if(data.code==5000){
						goToA();
					}else if(data.code==5001){
						layer.msg(data.msg);
					}else if(data.code==5002){
						layer.msg(data.msg);
					}else if(data.code==5003){
						layer.msg(data.msg);
					}else{
						layer.msg("对不起，请稍后重新提交");
					}
				},
				error:function(data){
					$('.loading').hide();
					console.log(data);
					
				}
			});
		}
		function goToA(){
			 if(navigator.userAgent.match('iPhone')){
				 goToAddauth();
             }
             if(navigator.userAgent.match('Android')){
            	 goToAddauth();
             }
			
		}
		</script>
