*{
	margin:0;
	padding:0;
}
.infobox{
	width: 100%;
	padding-top:28px;
	border-bottom: 1px solid #ccc;
}
.infobox p{
	font-size: 14px;
	line-height:14px;
    color:#333;
}
.infobox input{
	width:100%;
	margin: 0;
    padding-top: 14px;
    padding-bottom: 14px;
    font-size: 14px;
    line-height:normal;
    color:#858585;
    border: 0;
    outline: none;
    -webkit-tap-highlight-color:rgba(255,0,0,0);
}
input::-webkit-input-placeholder{
    font-family: "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
    font-size: 14px;
}
.box2{
	padding-top:17px;
	padding-bottom:7px;
}
